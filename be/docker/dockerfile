
FROM node:12

WORKDIR /usr/src/fuyuko

COPY package*.json ./

COPY . .

RUN apt -y update && \
    apt -y install apt-utils && \
    apt -y install jq && \
    apt -y install moreutils && \
    npm install && \
    /bin/bash -c 'chmod u+x update-config-json.sh'

EXPOSE 8888

CMD ["node", "src/app.js"]

